"General nvim settings

"Numbers
set relativenumber
set number

"Syntax
syntax enable

"Fold
set foldenable

"Mouse
set mouse=a

"swap
set noswapfile

"split
set splitright
set splitbelow

"wrap
set nowrap

"other options
set tabstop=2
set shiftwidth=4
set softtabstop=2
set expandtab
set showcmd
set smarttab
filetype indent on
set wildmenu
set showmatch
set incsearch
set hlsearch
set hidden
set noshowmode
set linebreak
set confirm
